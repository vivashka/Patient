@using Models

@inject DialogService DialogService

<RadzenStack Orientation="Orientation.Horizontal"  JustifyContent="JustifyContent.SpaceBetween" class="">
    <RadzenText TextStyle="TextStyle.Body1" style="font-size:20px"> <strong>Подробная информация о пациенте:</strong></RadzenText>
    <RadzenButton TextStyle="TextStyle.Body1" style="font-size:36px" Click=@(args => CloseButtton()) Text="&times;" ButtonStyle="ButtonStyle.Danger" class="rz-border-radius-10" />
</RadzenStack>



<RadzenStack Orientation="Orientation.Horizontal" Gap="15px" >
    <RadzenColumn Orientation="Orientation.Vertical"  Gap="0">
        <RadzenText TextStyle="TextStyle.Body1"><strong>Имя:</strong> @(OnePatient.Firstname ?? "Отсутствует")</RadzenText>
        <RadzenText TextStyle="TextStyle.Body1"><strong>Фамилия:</strong> @(OnePatient.Surname ?? "Отсутствует")</RadzenText>
        <RadzenText TextStyle="TextStyle.Body1"><strong>Отчество:</strong> @(OnePatient.Patronymic ?? "Отсутствует")</RadzenText>
    </RadzenColumn>
    <RadzenColumn Orientation="Orientation.Vertical" Gap="0">
        <RadzenText TextStyle="TextStyle.Body1"><strong>Дата рождения:</strong> @(OnePatient.BirthDate.ToString("dd-MM-yyyy") ?? "Отсутствует")</RadzenText>
        <RadzenText TextStyle="TextStyle.Body1"><strong>Пол:</strong> @(OnePatient.Gender.ToString() ?? "Отсутствует")</RadzenText>
    </RadzenColumn>
    <RadzenColumn Orientation="Orientation.Vertical" Gap="0">
        <RadzenText TextStyle="TextStyle.Body1"><strong>СНИЛС:</strong> @(OnePatient.Snils.DocumentNumber ?? "Отсутствует")</RadzenText>
        <RadzenText TextStyle="TextStyle.Body1"><strong>Полис:</strong> @(OnePatient.Polis.DocumentNumber ?? "Отсутствует")</RadzenText>
    </RadzenColumn>
</RadzenStack>




<RadzenColumn Orientation="Orientation.Vertical" Gap="0">
    <RadzenText TextStyle="TextStyle.Body1" style="font-size:20px"><strong>Адрес проживания:</strong></RadzenText>
    <RadzenText TextStyle=TextStyle.Body1><strong>Город:</strong> @(OnePatient.Address.City ?? "Отсутствует")</RadzenText>
    <RadzenText TextStyle="TextStyle.Body1"><strong>Регион:</strong> @(OnePatient.Address.Region ?? "Отсутствует")</RadzenText>
    <RadzenText TextStyle="TextStyle.Body1"><strong>Улица:</strong> @(OnePatient.Address.Street ?? "Отсутствует")</RadzenText>
    <RadzenText TextStyle="TextStyle.Body1"><strong>Номер улицы:</strong> @(OnePatient.Address.House?.ToString() ?? "Отсутствует")</RadzenText>
    <RadzenText TextStyle="TextStyle.Body1"><strong>Квартира:</strong> @(OnePatient.Address.Flat?.ToString() ?? "Отсутствует")</RadzenText>
    <RadzenText TextStyle="TextStyle.Body1"><strong>Этаж:</strong> @(OnePatient.Address.Floor?.ToString() ?? "Отсутствует")</RadzenText>
</RadzenColumn>

@code {
    [Parameter] public Patient OnePatient { get; set; }
    void CloseButtton()
    {
        DialogService.Close();
    }
}
